@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>
<div class="row justify-content-around">
    <div class="card border-primary">
        <div class="card-header">
            <h4 class="card-text">Simple search</h4>
        </div>
        <div class="card-body m-2">
            <div class="container-fluid">
                <form class="form" asp-action="SimpleSearch">
                    <div class="form-group row">
                        <label for="minDate" class="col-px-2 col-form-label">Min Date</label>
                        <div class="col">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="maxDate" class="col-px-2 col-form-label">Max Date</label>
                        <div class="col">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-info">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <div class="card border-primary">
        <div class="card-header">
            <h4 class="card-text">Grouping search</h4>
        </div>
        <div class="card-body m-2">
            <div class="container-fluid">
                <form class="form" asp-action="GroupingSearch">
                    <div class="form-group row">
                        <label for="minDate" class="col-px-2 col-form-label">Min Date</label>
                        <div class="col">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="maxDate" class="col-px-2 col-form-label">Max Date</label>
                        <div class="col">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-info">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
